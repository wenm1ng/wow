.btn-popup {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 50rpx;
    height: 50rpx;
    position: fixed;
    z-index: 100;
    top: 20rpx;
    right: 0;
    background: #f7f7f7;
    border-left: 1px #ccc solid;
    opacity: 0.8;
}

.btn-popup .btn {
    transform: rotate(45deg);
    transition: All 0.3s ease;
}

.btn-popup .btn-active {
    transition: All 0.3s ease;
}
.popup {
    padding: 10rpx 0 20rpx 0;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    width: 100%;
    height: auto;
    background: #f7f7f7;
}

