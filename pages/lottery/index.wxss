.currin{
    margin-left: 4%;
    margin-top: 50rpx;
    width: 28%;
    float: left;
    background-image: linear-gradient(45deg, #0081ff, #1cbbb4);
    background-size: 210rpx 200rpx;
    color: #fff;
    text-align: center;
    height: 200rpx;
    line-height: 200rpx;
    border-radius: 10rpx;
    position: relative;
}
.currin::before {
    content: "";
    display: block;
    background: inherit;
    filter: blur(10rpx);
    position: absolute;
    width: 100%;
    height: 100%;
    top: 10rpx;
    left: 10rpx;
    z-index: -1;
    opacity: 0.4;
    transform-origin: 0 0;
    border-radius: inherit;
    transform: scale(1, 1);
}
.cinton1{
    animation: cinton1 alternate linear 2 1s;
}
@keyframes cinton1{
    from {
        top: 0;
        left: 0;
    }
    to {
        top: 230rpx;
        left: 230rpx;
    }
}
