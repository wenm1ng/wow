<!-- pages/auth/index.wxml -->

<!-- 授权展示 -->
<l-status-show show custom>
	<image src="/images/logo/logo.png" class="bg" bindtap="getUserProfile" />
	<text class="title-text">为了更好的服务您</text>
	<text class="title-text" style="margin-top:10rpx">正在申请获得以下权限：</text>
	<text class="desc-text">获得您的账号授权信息</text>
	<l-button bg-color="#337559" width="480" l-class="btn-auth" lang="zh_CN" bindtap="getUserProfile"
		bindgetuserprofile="auth">微信授权</l-button>
	<l-button bg-color="white" width="480" l-class="btn-back" lang="zh_CN" bindtap="goBack"
			  bindgetuserprofile="auth">取消</l-button>
</l-status-show>

<!-- 消息提示 -->
<l-message />
